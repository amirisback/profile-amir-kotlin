<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/iv_photo"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/img_photo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_job"
            android:text="@string/text_job"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="@+id/tv_name"/>
    <TextView
            android:text="@string/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/iv_photo" app:layout_constraintStart_toStartOf="@+id/iv_photo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/iv_photo"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_nav_skill"
            android:id="@+id/fab_skill"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp" android:focusable="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_nav_certificate"
            android:id="@+id/fab_certificate"
            app:layout_constraintTop_toTopOf="@+id/fab_skill"
            app:layout_constraintBottom_toBottomOf="@+id/fab_skill"
            app:layout_constraintStart_toEndOf="@+id/fab_skill" android:layout_marginStart="16dp"
            android:focusable="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_nav_organization"
            android:id="@+id/fab_social_media"
            app:layout_constraintTop_toTopOf="@+id/fab_skill"
            app:layout_constraintBottom_toBottomOf="@+id/fab_skill"
            app:layout_constraintEnd_toStartOf="@+id/fab_skill" android:layout_marginEnd="16dp"
            android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>